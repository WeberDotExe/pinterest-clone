<% include ./partials/header.ejs %>

<div class="w-full h-screen bg-center bg-cover bg-[url('https://images.unsplash.com/photo-1605362001336-f91645086f32?q=80&w=1887&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] flex items-center justify-center">
    <div class="w-[25vw] bg-white px-14 py-10 rounded-[30px]">
      <img class="h-[100px] w-[100px] ml-[30%] mb-[20px]" src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png" alt="">
      <h1 class="text-3xl mb-10 text-center font-semibold text-zinc-700 tracking-tight capitalize leading-none ">create new account</h1>
      <form action="/register" method="post">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="username" placeholder="username">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="email" name="email" placeholder="email">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="fullname" placeholder="Full name">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="number" name="contact" placeholder="contact">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="password">
        <!-- <a class="mt-2 font-semibold text-zinc-500" href="#">Forgot password ?</a> -->
        <input class="border-2 rounded-full block mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="create new account">
        <p class="text-xs font-semibold text-zinc-700 mt-2 text-center mt-7 w-3/4 mx-auto">By continuing, you agree to Pintrest's Terms of Service;and acknowledge that you've read our privacy policy notice or collection </p>
      </form>
      <a class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full" href="/">Login Existing Account</a>
    </div>
  </div>
